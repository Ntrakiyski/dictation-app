{
  "name": "voice-clipboard",
  "version": "1.0.0",
  "description": "Desktop app that records audio on hotkey, transcribes via Groq API, and copies to clipboard",
  "private": true,
  "workspaces": [
    "backend",
    "web-app",
    "shared"
  ],
  "scripts": {
    "dev:electron": "cd electron-app && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "cd web-app && npm run dev",
    "build:electron": "cd electron-app && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd web-app && npm run build",
    "test:backend": "cd backend && npm test",
    "test:web": "cd web-app && npm test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "electron",
    "react",
    "voice-recording",
    "transcription",
    "clipboard",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.3",
    "groq-sdk": "^0.3.0",
    "lucide-react": "^0.303.0",
    "mongodb": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.1.0"
  }
}
